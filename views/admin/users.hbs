<script type="text/javascript" src="/javascripts/userCtrl.js"></script>
<div ng-controller="userCtrl">
	<h2 class="text-center">{{title}}</h2>
	<table class="table">
		<thead>
			<tr>
				<td>Username</td>
				<td>isAdmin</td>
				<td>&nbsp;</td>
			</tr>
		</thead>
		<tbody>
			<tr dir-paginate="user in users | itemsPerPage: usersPerPage" total-items="totalUsers" current-page="pagination.current">
				<td>{[{ user.username }]}</td>
				<td>{[{ user.admin }]}</td>
				<td>
					<a href="admin/manage/{[{ user._id }]}" type="button" class="btn btn-success">Manage</a>
					<a href="admin/remove/{[{ user._id }]}" type="button" class="btn btn-success">Delete</a>			
				</td>	
			</tr>
		</tbody>
	</table>
	<div class="tableFoot row">
		<div class="col-md-6 col-md-offset-3 col-sm-12">
			<dir-pagination-controls class="pageCtrls" on-page-change="pageChanged(newPageNumber)"></dir-pagination-controls>
		</div>
		<div class="col-md-2 col-md-offset-5">
			<select class="pageAmtCtrls" ng-model="usersPerPage" ng-change="pageAmtChange()" ng-options="option.value as option.name for option in options">
				<option value="2">2</option>
				<option value="25">25</option>
				<option value="50">50</option>
				<option value="100">100</option>
			</select>
		</div>
	</div>
</div>